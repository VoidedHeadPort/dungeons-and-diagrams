    "version": "0.2.0",
    "configurations": [
        {
            "name": "solve_puzzle",
            "type": "prolog",
            "request": "launch",
            "runtimeExecutable": "C:\\Program Files\\swipl\\bin\\swipl.exe",
            "runtimeArgs": [],
            "env": {},
            "program": "dnd.pl",
            "cwd": "${workspaceFolder}",
            "startupQuery": "solve_puzzle('${input:puzzle}')",
            "stopOnEntry": true,
            "traceCmds": {
